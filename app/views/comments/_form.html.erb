<%if current_user%>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :Comment %><br />
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label :Image_for_comment%><br />
    <%= f.file_field :comment_image %>
  </div>

  <%= f.hidden_field :user_id,value: current_user.id%>
  <%= f.hidden_field :article_id%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%else%>
<strong>Please sign in to add a comment.</strong>
<div>
<button type="button" name="Sign_up"><%= link_to 'Sign up', new_user_registration_path%>
</div>
<br>
<div>
<button type="button" name="Log_in"><%= link_to "log_in", "/users/sign_in" %></button>
</div>
<%end%>
